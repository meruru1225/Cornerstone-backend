{
  "settings": {
    "index.max_ngram_diff": 20,
    "number_of_shards": 3,
    "number_of_replicas": 1,
    "analysis": {
      "filter": {
        "ngram_filter": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      },
      "tokenizer": {
        "my_pinyin": {
          "type": "pinyin",
          "keep_first_letter": true,
          "keep_full_pinyin": true,
          "keep_original": true,
          "limit_first_letter_length": 50,
          "lowercase": true,
          "remove_duplicated_term": true
        }
      },
      "analyzer": {
        "mixed_analyzer": {
          "type": "custom",
          "tokenizer": "ik_max_word",
          "filter": [
            "lowercase",
            "ngram_filter"
          ]
        },
        "pinyin_analyzer": {
          "tokenizer": "my_pinyin"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "nickname": {
        "type": "text",
        "analyzer": "mixed_analyzer",
        "search_analyzer": "ik_smart",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "suggestion": {
            "type": "completion",
            "analyzer": "pinyin_analyzer",
            "search_analyzer": "pinyin_analyzer"
          },
          "pinyin": {
            "type": "text",
            "analyzer": "pinyin_analyzer",
            "search_analyzer": "pinyin_analyzer"
          }
        }
      },
      "bio": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "avatar_url": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "gender": {
        "type": "integer"
      },
      "region": {
        "type": "keyword"
      },
      "birthday": {
        "type": "date"
      },
      "followers_count": {
        "type": "integer"
      },
      "following_count": {
        "type": "integer"
      }
    }
  }
}