{
  "settings": {
    "index.max_ngram_diff": 20,
    "number_of_shards": 3,
    "number_of_replicas": 1,
    "analysis": {
      "filter": {
        "ngram_filter": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      },
      "tokenizer": {
        "my_pinyin": {
          "type": "pinyin",
          "keep_first_letter": true,
          "keep_full_pinyin": true,
          "keep_original": true,
          "limit_first_letter_length": 50,
          "lowercase": true,
          "remove_duplicated_term": true
        }
      },
      "analyzer": {
        "mixed_analyzer": {
          "type": "custom",
          "tokenizer": "ik_max_word",
          "filter": [
            "lowercase",
            "ngram_filter"
          ]
        },
        "pinyin_analyzer": {
          "tokenizer": "my_pinyin"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "user_id": {
        "type": "long"
      },
      "status": {
        "type": "integer"
      },
      "title": {
        "type": "text",
        "analyzer": "mixed_analyzer",
        "search_analyzer": "ik_smart",
        "fields": {
          "suggestion": {
            "type": "completion",
            "analyzer": "pinyin_analyzer",
            "search_analyzer": "pinyin_analyzer"
          },
          "pinyin": {
            "type": "text",
            "analyzer": "pinyin_analyzer",
            "search_analyzer": "pinyin_analyzer"
          }
        }
      },
      "plain_content": {
        "type": "text",
        "analyzer": "mixed_analyzer",
        "search_analyzer": "ik_smart",
        "term_vector": "with_positions_offsets"
      },
      "content": {
        "type": "text",
        "index": false,
        "store": true
      },
      "content_vector": {
        "type": "dense_vector",
        "dims": 1024,
        "index": true,
        "similarity": "cosine"
      },
      "main_tag": {
        "type": "keyword"
      },
      "user_tags": {
        "type": "keyword"
      },
      "ai_tags": {
        "type": "keyword",
        "index": true
      },
      "ai_summary": {
        "type": "text",
        "analyzer": "mixed_analyzer",
        "search_analyzer": "ik_smart"
      },
      "media": {
        "type": "nested",
        "properties": {
          "type": {
            "type": "keyword",
            "index": false
          },
          "url": {
            "type": "keyword",
            "index": false,
            "doc_values": false
          },
          "cover": {
            "type": "keyword",
            "index": false,
            "doc_values": false
          },
          "width": {
            "type": "integer",
            "index": false
          },
          "height": {
            "type": "integer",
            "index": false
          },
          "duration": {
            "type": "float",
            "index": false
          }
        }
      },
      "user_nickname": {
        "type": "keyword",
        "index": false
      },
      "user_avatar": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "likes_count": {
        "type": "integer"
      },
      "comments_count": {
        "type": "integer"
      },
      "collects_count": {
        "type": "integer"
      },
      "views_count": {
        "type": "integer"
      },
      "created_at": {
        "type": "date"
      },
      "updated_at": {
        "type": "date"
      }
    }
  }
}